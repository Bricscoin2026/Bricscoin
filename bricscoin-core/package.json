{
  "name": "bricscoin-core",
  "version": "2.1.0",
  "description": "BricsCoin Core Desktop Wallet with P2P Sync",
  "main": "main.js",
  "homepage": "https://bricscoin26.org",
  "author": {
    "name": "BricsCoin Team",
    "email": "info@bricscoin26.org"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bricscoin26/bricscoin"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "elliptic": "^6.5.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "org.bricscoin.core",
    "productName": "BricsCoin Core",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,test,__tests__,tests,spec,*.ts}"
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Finance",
      "maintainer": "info@bricscoin26.org"
    },
    "win": {
      "target": ["portable"]
    },
    "mac": {
      "target": ["zip"],
      "category": "public.app-category.finance"
    }
  }
}
