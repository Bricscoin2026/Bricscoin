{
  "name": "bricscoin-core",
  "version": "1.0.0",
  "description": "BricsCoin Core - Full Node Wallet",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "BricsCoin Team",
  "license": "MIT",
  "dependencies": {
    "nedb-promises": "^6.2.3",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0",
    "elliptic": "^6.5.4",
    "bip39": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "org.bricscoin.core",
    "productName": "BricsCoin Core",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "icons/icon.icns",
      "category": "public.app-category.finance"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icons",
      "category": "Finance"
    }
  }
}
